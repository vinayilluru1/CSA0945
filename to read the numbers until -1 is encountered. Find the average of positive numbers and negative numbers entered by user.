mport java.util.Scanner;

public class AvgPositiveNegative {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int posCount = 0, negCount = 0;
        int posSum = 0, negSum = 0;
        System.out.println("Enter -1 to exitâ€¦");
        while (true) {
            System.out.print("Enter the number: ");
            int num = sc.nextInt();
            if (num == -1) {
                break;
            }
            if (num > 0) {
                posSum += num;
                posCount++;
            } else if (num < 0) {
                negSum += num;
                negCount++;
            }
        }
        double posAvg = (posCount == 0) ? 0 : (double) posSum / posCount;
        double negAvg = (negCount == 0) ? 0 : (double) negSum / negCount;
        if (negCount > 0)
            System.out.println("The average of negative numbers is: " + negAvg);
        else
            System.out.println("No negative numbers entered.");

        if (posCount > 0)
            System.out.println("The average of positive numbers is: " + posAvg);
        else
            System.out.println("No positive numbers entered.");

        sc.close();
    }
}
